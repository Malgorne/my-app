{
  "recurseDepth": 10,
  "source": {
    "include": ["README.md", "src"],
    "exclude": [
      "node_modules",
      "dist",
      "coverage",
      "doc"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc","closure"]
  },
  "tags": {
    "allowUnknownTags": true
  },
  "opts": {
    "destination": "./doc",
    "template": "node_modules/tui-jsdoc-template"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "name": "my-app documentation!",
    "footerText": "Have fun!",
    "default": {
      "staticFiles": {
        "include": ["jsdoc/"]
      }
    },
    "css": [
      "style.css"
    ]
  }
}
